{
    "version": 2,
    "name": "geosaude",
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/dist/$1"
        }
    ],
    "env": {
        "VITE_API_URL": "https://geosaude.vercel.app/api"
    },
    "regions": [
        "gru1"
    ],
    "functions": {
        "api/**/*.js": {
            "memory": 1024,
            "maxDuration": 30
        }
    }
}